<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_search_head" />

    <ListView
        android:id="@+id/lv_search_list"
        android:scrollbars="none"
        android:overScrollMode="always"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ListView
        android:id="@+id/lv_search_more_expand_list"
        android:visibility="gone"
        android:scrollbars="none"
        android:overScrollMode="always"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_show_result_notfound"
        android:gravity="center"
        android:text="抱歉没有找到数据"
        android:textSize="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/pb_show_result_before"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>